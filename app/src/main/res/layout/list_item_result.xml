<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/half_default_margin"
        app:cardCornerRadius="0dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rate_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/margin_default"
            android:paddingTop="@dimen/padding_default"
            android:paddingRight="@dimen/margin_default"
            android:paddingBottom="@dimen/row_padding">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/row_padding"
                android:src="@drawable/baseline_account_box_48" />

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profile"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size_list_item_1"
                tools:text="James Johnson" />

            <TextView
                android:id="@+id/email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_name"
                android:layout_toEndOf="@id/profile"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size_small"
                tools:text="james@example.com" />


            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size_list_item_2"
                tools:text="100" />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/first_name"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_size_list_item_1"
                android:text="points" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>